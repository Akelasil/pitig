<h1></h1>

<%= form_for(@admin_coleccion) do |f| %>
  <% if @admin_coleccion.errors.any? %>
    <div id="error_explanation">
      <h2>Es necesario corregir <%= pluralize(@admin_coleccion.errors.count, "error", "errores") %> para crear la Colección:</h2>

      <ul>
      <% @admin_coleccion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label 'Nombre (*)' %><br />
    <%= f.text_field :nombre %><br /><br />
  </div>

  <div class="field">
    <%= f.label 'Descripción' %><br />
    <%= f.text_area :descripcion %><br /><br />
  </div>

  <div class="actions">
    <%= f.submit "#{@action}" %><br /><br /><br />
  </div>

  <div class="oblig">
    (*) Campos obligatorios<br /><br /><br />
  </div>
<% end %>
