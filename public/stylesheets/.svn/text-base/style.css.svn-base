  margin-left: auto;
  margin-right: whatever;
}

/* ------ carrito --------- */
table#carrito-obras {
  padding: 0;
  margin: 0;
  width: 99%;
  border-collapse: collapse;
}

table#carrito-obras tr > th{
  border: 2px groove #B36B00;
  text-height: bold;
  background-color: #B36B00;
  color: white;
}

table#carrito-obras .obra {
  text-align: center;
  vertical-align: middle;
  background-color: transparent;
}

table#carrito-obras td {
  margin: 0;
  padding: 0;
  padding-top: 5px;
  padding-bottom: 5px;
  border: 1px dotted #B36B00;
}

pre {
  background-color: #eee;
  padding: 10px;
  font-size: 11px;
}

a, a:visited { color: #000;}

a:hover {
  color: #666; 
  background-color:#FFF;
}

a > img {border: none;}

.fieldWithErrors {
  padding: 2px;
  background-color: red;
  display: table;
}

#error_explanation {
  width: 400px;
  border: 2px solid red;
  padding: 7px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
}

